<h1>Listing agreements</h1>

<table>
  <thead>
    <tr>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agreements.each do |agreement| %>
      <tr>
        <td><%= agreement.detail %></td>
        <td><%= link_to 'Show', [:admin, agreement] %></td>
        <td><%= link_to 'Edit', edit_admin_agreement_path(agreement) %></td>
        <td><%= link_to 'Destroy', [:admin, agreement], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Agreement', new_admin_agreement_path %>
