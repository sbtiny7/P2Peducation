<% content_for :head do  %>
    <style>
        body {
            height: 870px;
            background-color: #F1F1F1;
            background-repeat: no-repeat;
            background-size: cover;
        }
        .remember_me {
            margin-bottom: 10px;
        }
        .sign_in_form {
            margin-top: 20px;
        }

    </style>
<% end %>


<% if flash[:alert] %>
    <div class="alert alert-danger" role="alert">
        <%= flash[:alert] %>
    </div>
<% end %>



<div class="">

    <div class="">
        <div class="col-md-8"></div>
        <div class="col-md-4 sign_in_form">
            <div class="" >
                <div class="" >
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                        <div class="form-group">
                            <label for="exampleInputEmail1">邮箱地址</label>
                            <%= f.email_field :email, autofocus: true ,:class=>'form-control input',:id=>'exampleInputEmail1',:placeholder=>'邮箱地址'%>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1"><%= f.label :password %></label>
                            <%= f.password_field :password, autocomplete: "off",:class=>'form-control input',:id=>'exampleInputPassword1',:placeholder=>'输入密码' %>
                        </div>

                        <% if devise_mapping.rememberable? -%>
                            <div class="remember_me"><%= f.check_box :remember_me %>记住密码</div>
                        <% end -%>

                        <button type="submit" class="btn btn-info">
                            登录
                        </button>
                    <% end %>
                    <br/>
                    <%= render "accounts/shared/links" %>

                </div>
            </div>
        </div>
    </div>
</div>