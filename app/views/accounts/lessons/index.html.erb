<h1>Listing lessons</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.title %></td>
        <td><%= lesson.course_id %></td>
        <td><%= link_to 'Show', [:accounts, lesson] %></td>
        <td><%= link_to 'Edit', edit_accounts_lesson_path(lesson) %></td>
        <td><%= link_to 'Destroy', [:accounts, lesson], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lesson', new_accounts_lesson_path %>
