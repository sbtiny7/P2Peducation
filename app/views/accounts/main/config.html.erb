<div class="row">
  <div class="col-md-8">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">账户设置</h3>
      </div>
      <div class="panel-body">
        <%= form_for(current_user, url: registration_path(:user), html: { method: :put }) do |f| %>

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-btn">
              <%= f.label :email, '电子邮件', class: 'btn btn-info' %>
            </span>
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-btn">
              <%= f.label :username, '用户姓名', class: 'btn btn-info' %>
            </span>
            <%= f.email_field :username, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-btn">
              <%= f.label :phone, '联系电话', class: 'btn btn-info' %>
            </span>
            <%= f.email_field :phone, class: "form-control" %>
          </div>
        </div>

        <div class="form-group actions text-right">
          <%= f.submit '提交', class: 'btn btn-danger' %>
        </div>
        <% end %>
      </div>

      <div class="panel-footer">
        <%= button_to "删除账户", registration_path(:user), data: { confirm: "Are you sure?" }, class: 'btn btn-warning', method: :delete %>
      </div>
    </div>
  </div>
  <div class="col-md-4">

    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">我的头像</h3>
      </div>
      <div class="panel-body">
        <div class="clearfix">
          <div class="left">
            <img src="<%= current_user.avatar.url %>" width="200px" height="200px">
          </div>
          <div class="right">
            <img src="<%= current_user.avatar.thumb %>" width="32px" height="32px">
          </div>
        </div>
      </div>

      <div class="panel-footer text-right">
        <%= link_to "更换头像", accounts_upload_avatar_path, class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>