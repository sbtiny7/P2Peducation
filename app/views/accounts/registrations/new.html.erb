
<div class="register">
  <div ><%= devise_error_messages! %></div>
    <div class="border" >
    <div class="form" >

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="form-group">
            <label for="exampleInputEmail1">邮箱地址</label>
            <%= f.email_field :email, autofocus: true ,:class=>'form-control input',:id=>'exampleInputEmail1',:placeholder=>'邮箱地址'%>
          </div>

          <div class="form-group">
            <label for="exampleInputPassword1">输入密码<% if @validatable %><i>(至少<%= @minimum_password_length %>个字符)</i><% end %></label>
            <%= f.password_field :password, autocomplete: "off" ,:class=>'form-control input',:id=>'exampleInputPassword1',:placeholder=>'输入密码'%>
          </div>

          <div class="form-group">
            <label for="exampleInputPassword1"><%= f.label :password_confirmation %></label>
            <%= f.password_field :password_confirmation, autocomplete: "off" ,:class=>'form-control input',:id=>'exampleInputPassword1',:placeholder=>'再次输入密码'%>
          </div>

          <button type="submit" class="btn btn-info">
            注册
          </button>
      <% end %>

      <a href="/accounts/sign_in">登录</a>

    </div>
  </div>
</div>
