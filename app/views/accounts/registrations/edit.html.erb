<% content_for :head  do %>
    <%= stylesheet_link_tag "password" %>
<% end %>

<div class="change_password">
    <% if resource.errors.full_messages.length > 0  %>
        <div class="alert alert-info" role="alert">
            <%= devise_error_messages! %>
        </div>
    <% end %>
    <div class="">
        <h3 class="">修改密码</h3>
    </div>
    <div class="">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <div class="form-group">
                <%= f.label :current_password, '请确认旧密码', class: 'introduction' %>
                <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :password, '请输入新密码', class: 'introduction' %>
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :password_confirmation, '请确认新密码', class: 'introduction' %>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>


            <div class="form-group actions text-right"><%= f.submit "修改密码", class: 'btn btn-success' %></div>
        <% end %>
    </div>
</div>

