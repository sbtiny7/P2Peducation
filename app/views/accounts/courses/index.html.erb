<h1>Listing courses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.user_id %></td>
        <td><%= link_to 'Show', [:accounts, course] %></td>
        <td><%= link_to 'Edit', edit_accounts_course_path(course) %></td>
        <td><%= link_to 'Destroy', [:accounts, course], method: :delete, data: { cirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

