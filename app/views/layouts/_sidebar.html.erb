<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title"><%= current_user.username %></h3>
    </div>
    <div class="my-panel-body">
        <div class="avatar">
            <%= link_to image_tag(@timestamp ? "#{current_user.avatar.url(:crop)}?#{@timestamp}" : current_user.avatar.url(:crop), :width => 200, :height => 200), accounts_config_avatar_path, :class => 'upload_avatar' %>
            <icon class="upload_avatar">设置头像</icon>
        </div>
    </div>
    <div class="list-group">
        <a href='<%= accounts_config_path %>' class='list-group-item<% if ['config_account', 'update_account'].include?(action_name) %> active<% end %>'>个人设置</a>
        <a href='<%= edit_user_registration_path %>' class='list-group-item<% if controller_name == 'registrations' %> active<% end %>'>修改密码</a>
        <a href='<%= accounts_learning_path %>' class="list-group-item 
            <% if controller_name == 'dashboard' && action_name == "learning" %> active<% end %>">我的课程</a>
        <a href='<%= new_accounts_course_path %>' class='list-group-item<% if controller_name == 'courses' and !['index', 'edit'].include?(action_name) %> active<% end %>'>开设课程</a>
        <a href="<%= accounts_courses_path %>" class="list-group-item 
            <% if controller_name == "courses" and action_name == "index" %> active<% end %>">学堂管理</a>
        <a href="<%= accounts_incoming_path %>" class="list-group-item
            <% if controller_name == "dashboard" && action_name == "incoming" %> active<% end %>">我的收入</a>
    </div>
</div>
<script type="text/javascript">
$(function(){
    $('.avatar').mouseover(function(){
        $('icon.upload_avatar').show();
    }).mouseout(function(){
        $('icon.upload_avatar').hide();
    })
    $('icon.upload_avatar').click(function(){
        window.location.href = $('a.upload_avatar').attr('href');
    })
})
</script>
