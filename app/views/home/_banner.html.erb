    <div id="slidable-banner" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#slidable-banner" data-slide-to="0" class="active"></li>
            <li data-target="#slidable-banner" data-slide-to="1"></li>
            <li data-target="#slidable-banner" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <%= image_tag("sunset.jpg") %>
                <div class="carousel-caption">
                    <h1>在这里，你可以分享知识</h1>
                </div>
            </div>

            <div class="item">
                <%= image_tag("subway.jpg") %>
                <div class="carousel-caption">
                    <h1>在这里，你可以学习知识</h1>
                </div>
            </div>

            <div class="item">
                <%= image_tag("shop.jpg") %>
                <div class="carousel-caption">
                    <h1>在这里，你可以学习知识</h1>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#slidable-banner" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#slidable-banner" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
